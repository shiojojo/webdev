        <ul>
          <% if (locals.messages) { %>
          <% console.log(messages); %>
          <% messages.forEach(function(e) { %>
              <li>
                  <p><%= e.content %></p>
              </li>
          <% }); %>
          <% }; %>
          </ul>
  

        </h2>
      </div>
    </div>
